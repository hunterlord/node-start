{
  "name": "node-start",
  "version": "1.0.0",
  "description": "nodejs es6 base fast start",
  "main": "app/index.js",
  "scripts": {
    "start": "pm2 start process.config.js --only front-dev && pm2 start process.config.js --only server-dev",
    "start-prod": "npm run build && pm2 start process.config.js --only server",
    "build": "rm -rf ./dist && npm run build-assets && npm run build-server",
    "build-server": "babel src -d dist --copy-files",
    "build-assets": "cross-env NODE_ENV=PROD node ./node_modules/webpack/bin/webpack.js",
    "prepare": "npm i -g babel-cli babel pm2 cross-env"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "art-template": "^4.12.1",
    "art-template-loader": "^1.4.3",
    "autoprefixer": "^7.1.4",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-minify": "^0.2.0",
    "babel-plugin-import": "^1.5.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-minify": "^0.2.0",
    "clean-webpack-plugin": "^0.1.16",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "koa-ejs": "^4.1.0",
    "less": "^2.7.2",
    "postcss-loader": "^2.0.6",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.8.2"
  },
  "dependencies": {
    "koa": "^2.3.0",
    "koa-route": "^3.2.0",
    "koa-static": "^4.0.1",
    "koa2-cors": "^2.0.3"
  }
}
